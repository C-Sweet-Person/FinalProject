@model List<FinalProject.Models.Product>
@{
    ViewBag.Title = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
    public string ProductCode { get; set; }
    public string Description { get; set; }
    public decimal UnitPrice { get; set; }
    public int OnHandQuantity { get; set; }
*@
<h2>List of Products</h2>
<div class="row">
    <div class="col-md-6">
        <input id="txtsearch" style="text" class="form-control" onkeyup="search();" placeholder="Search..." /><br />
        <input type="button" class="btn btn-info" value="search" onclick="search();" />
    </div>
</div>
<a href="/Product/Upsert/">Add Product Data</a>

<table class="sortable table table-hover">
    <thead>
        <tr>
            <th onclick="Sortable.Sort(1)">Product Code</th>
            <th onclick="Sortable.Sort(2)">Description</th>
            <th onclick="Sortable.Sort(3)">Price Per Object</th>
            <th onclick="Sortable.Sort(4)">Quanity on Hand</th>
            <th>Edit</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var product in Model)
        {
        <tr>
            <td>@product.ProductCode</td>
            <td>@product.Description</td>
            <td>@product.UnitPrice</td>
            <td>@product.OnHandQuantity</td>
            <td><a href="/Product/Upsert/?productCode=@product.ProductCode">Edit</a></td>
        </tr>
        }
    </tbody>
</table>
<script>
    Sortable.baseUrl = "/Product/All/";
</script>